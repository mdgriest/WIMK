<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="commdgriest.httpsgithub.wimk.AddItemScreen"
    tools:showIn="@layout/activity_update_item_properties_screen"
    android:background="@color/burnt_orange">

    <Button
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:background="@drawable/custom_button_green_gradient"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/btnSetQuantity"
        android:textColor="@color/dark_gray"
        android:background="@drawable/settings_by_hysen_drogu"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:text="Set Item Name"
        android:id="@+id/btnSetItemName"
        android:textColor="@color/dark_gray"
        android:background="@drawable/custom_button_green_gradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSetQuantity"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:text="Select Icon"
        android:id="@+id/btnSelectIcon"
        android:textColor="@color/dark_gray"
        android:background="@drawable/custom_button_green_gradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnSetQuantity"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:background="@drawable/custom_button_green_gradient"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnSetQuantity"
        android:layout_marginRight="20dp"
        >
        <RadioButton
            android:id="@+id/rdbtnColor00"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_color_button_red"
            />
        <RadioButton
            android:id="@+id/rdbtnColor01"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_color_button_blue"
            />
    </RadioGroup>
</RelativeLayout>
