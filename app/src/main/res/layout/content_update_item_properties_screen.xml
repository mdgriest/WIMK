<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/updateItemPropertiesRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="commdgriest.httpsgithub.wimk.UpdateItemPropertiesScreen"
    tools:showIn="@layout/activity_update_item_properties_screen"
    android:background="@color/dark_gray">

    <com.jjoe64.graphview.helper.GraphViewXML
        android:id="@+id/graphItemQuantity"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radioColorGroup"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:seriesData="0=1"
        app:seriesType="bar"
        app:seriesColor="@color/avocado"
        />

    <Button
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:background="@drawable/custom_button_flat_avocado"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        />
    <Button
        android:id="@+id/btnSetQuantity"
        android:textColor="@color/dark_gray"
        android:background="@drawable/apple_by_creative_stall_with_background"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radioColorGroup"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:text="Apples"
        android:id="@+id/itemNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnSetQuantity"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/light_gray"
        android:singleLine="true"
        android:textSize="30sp"
        />
    <Button
        android:text="Set Item Name"
        android:id="@+id/btnSetItemName"
        android:textColor="@color/dark_gray"
        android:background="@drawable/custom_button_green_gradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSetQuantity"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:text="Select Icon"
        android:id="@+id/btnSelectIcon"
        android:textColor="@color/dark_gray"
        android:background="@drawable/custom_button_green_gradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnSetQuantity"
        android:layout_alignParentRight="true"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:background="@drawable/custom_button_flat_burnt_orange"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        />

    <RadioGroup
        android:id="@+id/radioColorGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSave"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rdbtnColor00"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_color_button_red"
            />
        <RadioButton
            android:id="@+id/rdbtnColor01"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_color_button_blue"
            />
        <RadioButton
            android:id="@+id/rdbtnColor02"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_color_button_green"
            />
        <RadioButton
            android:id="@+id/rdbtnColor03"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_color_button_yellow"
            />
        <RadioButton
            android:id="@+id/rdbtnColor05"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_color_button_pink"
            />
        <RadioButton
            android:id="@+id/rdbtnColor06"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_color_button_brown"
            />
        <RadioButton
            android:id="@+id/rdbtnColor07"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:button="@android:color/transparent"
            android:background="@drawable/custom_radio_color_button_orange"
            />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:layout_alignBottom="@+id/btnSave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
