<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="commdgriest.httpsgithub.wimk.MainMenuScreen"
    tools:showIn="@layout/activity_main_menu_screen"
    android:background="@color/burnt_orange">

    <TextView
        android:text="What's In My Kitchen?"
        android:id="@+id/txtAppName"
        android:textColor="@color/light_gray"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
    />

    <Button
        android:text="@string/settings"
        android:id="@+id/btnMainSettings"
        android:background="@drawable/custom_button_flat_avocado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
    />

    <Button
        android:text="@string/btnVisualInventory"
        android:id="@+id/btnVisualInventory"
        android:background="@drawable/custom_button_flat_avocado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMainSettings"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
    />

</RelativeLayout>
